{
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "deno.window"
        ],
        "strict": true
    },
    "lint": {
        "include": [
            "*.ts"
        ],
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 2,
        "semiColons": true,
        "singleQuote": true
    },
    "imports": {
        "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2"
    }
}